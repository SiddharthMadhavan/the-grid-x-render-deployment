# Grid-X Coordinator - copy to .env or set in environment
# Deploy coordinator on ONE machine; workers use COORDINATOR_WS to connect.

GRIDX_HTTP_PORT=8081
GRIDX_WS_PORT=8080
GRIDX_DB_PATH=gridx.db

# ----- Time-based credits -----
# Cost per second of compute (charged to job submitter)
GRIDX_COST_PER_SECOND=0.02
# Min/max charge per job (seconds * COST_PER_SECOND is clamped to this range)
GRIDX_MIN_COST=0.05
GRIDX_MAX_COST=10.0
# Fraction of submitter cost that goes to worker owner (0.0â€“1.0)
GRIDX_REWARD_RATIO=0.85
# Default job timeout in seconds (used to compute max reserve when not provided)
GRIDX_DEFAULT_JOB_TIMEOUT=60

# Starting balance for new users
GRIDX_INITIAL_CREDITS=100
